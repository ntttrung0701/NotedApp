<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F3F8">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_ch_username"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Change Username">

    <ImageView
        android:id="@+id/complete_change_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:src="@drawable/icons8_tick_24" />

</androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:gravity="top">

        <EditText
            android:id="@+id/edt_ch_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp"
            android:padding="12dp"
            android:background="@drawable/bg_white_conner_10_boder_gray"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="383dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the new Username"
            android:textColor="#7E7C7C"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>