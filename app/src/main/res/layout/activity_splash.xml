<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bg_profile"
    tools:context=".SplashActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/abril_fatface"
            android:text="@string/name"
            android:textColor="@color/txt_blue"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/imgSplashSearch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_profile"
            app:srcCompat="@android:drawable/ic_menu_search" />
    </LinearLayout>

<androidx.viewpager2.widget.ViewPager2
    android:id="@+id/viewPagerSplash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/circleIndicator3"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        app:ci_drawable="@drawable/backgroud_indicator3"
        android:layout_height="40dp">

    </me.relex.circleindicator.CircleIndicator3>

    <TextView
        android:id="@+id/txtTermsServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/txt_black_primary"
        android:padding="40dp"
        android:text="@string/terms_of_service" />

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:layout_height="wrap_content">
       <androidx.appcompat.widget.AppCompatButton
           android:background="@drawable/button_splash"
           android:id="@+id/btnSignup"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="20dp"
           android:textColor="@color/txt_white_in_btn"
           android:text="@string/sign_up_for_free" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/btnSignin"
           android:background="@drawable/button_splash"
           android:layout_width="match_parent"
           android:textColor="@color/txt_white_in_btn"
           android:layout_height="wrap_content"
           android:text="@string/or_log_in" />
   </LinearLayout>


</LinearLayout>