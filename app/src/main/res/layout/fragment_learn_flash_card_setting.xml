<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical"
    android:id="@+id/fragmentSettingBottomsheet"
    tools:context=".LearnFlashCardSetting">


    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/mar_10"
        android:text="@string/options"
        android:textSize="@dimen/pad_20"
        android:textColor="@color/txt_black_primary"
        android:textStyle="bold" />

    <com.google.android.flexbox.FlexboxLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="wrap"
        app:justifyContent="space_around">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShuffle"
            android:layout_width="@dimen/mar_60"
            android:layout_height="@dimen/mar_60"
            android:background="@drawable/round_button"
            android:text="@string/shuffle"
            android:textColor="@color/black_gray"
            android:textSize="10sp" />

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/btnPlayAudio"-->
<!--            android:layout_width="@dimen/mar_60"-->
<!--            android:layout_height="@dimen/mar_60"-->
<!--            android:background="@drawable/round_button"-->
<!--            android:text="@string/play_audio"-->
<!--            android:textColor="@color/black_gray"-->
<!--            android:textSize="10sp" />-->
    </com.google.android.flexbox.FlexboxLayout>


    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="@dimen/mar_10"
        android:text="@string/card_orientation"
        android:gravity="center"
        android:textColor="@color/txt_black_primary"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:alignContent="stretch"
        app:alignItems="stretch"
        app:flexWrap="wrap"
        app:justifyContent="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnToggleMode"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/mar_10"
            android:background="@drawable/button_splash"
            android:text="@string/term"
            android:textColor="@color/txt_white_in_btn" />

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/txtResetCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/pad_20"
        android:gravity="center"
        android:text="@string/reset_flashcard"
        android:textColor="@color/txt_blue"
        android:textSize="@dimen/pad_20"
        android:textStyle="bold" />

</LinearLayout>