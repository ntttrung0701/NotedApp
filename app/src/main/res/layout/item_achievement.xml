<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/mar_10"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgAchievement"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:contentDescription="@string/dark"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtNameAchievement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/pf_achievement"
        android:textColor="@color/txt_black_primary"
        android:textSize="@dimen/titleSizeCard"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/txt_black_primary"
        android:gravity="center"
        android:text="@string/pf_achievement" />
</LinearLayout>