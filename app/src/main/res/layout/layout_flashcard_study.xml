<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLearn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightFlashcardLearn"
        app:cardBackgroundColor="@color/bg_flashcard"
        android:layout_gravity="center_vertical"
        android:elevation="@dimen/mar_10"
        android:layout_marginHorizontal="@dimen/pad_20"
        app:cardCornerRadius="25dp"
        app:cardElevation="@dimen/mar_10">

        <ImageView
            android:id="@+id/iconSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginStart="@dimen/mar_10"
            android:layout_marginTop="@dimen/pad_20"
            android:src="@drawable/volume_up_24px" />

        <TextView
            android:id="@+id/txtFlashcardStudyTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Splash text"
            android:textColor="@color/txt_black_in_card"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/txtFlashcardStudyDefinition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Splash text"
            android:textSize="25sp"
            android:visibility="gone" />


    </androidx.cardview.widget.CardView>
</LinearLayout>