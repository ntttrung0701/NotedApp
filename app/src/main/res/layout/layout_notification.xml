<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/medal" />

            <TextView
                android:id="@+id/txtTitleNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imgNotification"
                android:text="Notification Title"
                android:textColor="@color/txt_black_in_card"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtContentNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTitleNotification"
                android:layout_toEndOf="@+id/imgNotification"
                android:paddingVertical="@dimen/mar_10"
                android:text="Notification Content"
                android:textColor="@color/txt_black_in_card"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

<!--    <com.google.android.material.divider.MaterialDivider-->
<!--        android:id="@+id/notificationDivider"-->
<!--        android:layout_width="match_parent"-->
<!--        android:visibility="gone"-->
<!--        android:layout_height="1dp" />-->

</LinearLayout>
