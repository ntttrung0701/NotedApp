<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_profile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clipToPadding="false"
        android:elevation="@dimen/mar_10"
        app:cardBackgroundColor="@color/bg_flashcard"
        android:layout_marginVertical="@dimen/mar_10"
        app:cardCornerRadius="@dimen/mar_10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/mar_10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/mar_10"
                android:paddingHorizontal="@dimen/mar_15">

                <TextView
                    android:id="@+id/txtFlashcardDetailTerm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Splash text"
                    android:textColor="@color/txt_black_in_card"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/mar_10"
                    android:src="@drawable/volume_up_24px" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtFlashcardDetailDefinition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingVertical="@dimen/mar_10"
                android:paddingHorizontal="@dimen/mar_15"
                android:textColor="@color/txt_black_in_card"
                android:text="Description"
                android:textSize="15sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>