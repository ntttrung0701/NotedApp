<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_profile">

    <androidx.cardview.widget.CardView
        android:id="@+id/frontFlashCardCardView"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/bg_flashcard"
        android:layout_height="200dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/pad_20"
        android:elevation="@dimen/mar_10"
        app:cardCornerRadius="25dp"
        app:cardElevation="@dimen/mar_10">


        <TextView
            android:id="@+id/txtFlashcardTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/txt_black_in_card"
            android:text="Splash text"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txtFlashcardDefinition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Splash text"
            android:textSize="25sp"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/imgZoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="@dimen/mar_10"
            android:layout_marginBottom="@dimen/pad_20"
            android:src="@drawable/icons8_enlarge_24" />
    </androidx.cardview.widget.CardView>


