<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizletPlus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/my_gray"
        android:orientation="horizontal"
        android:padding="@dimen/mar_10">

        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icons8_close_48_white" />

        <TextView
            android:id="@+id/txtTitlePlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/pad_5"
            android:layout_marginTop="@dimen/marginInput"
            android:gravity="center"
            android:text="@string/quizlet_plus"
            android:textColor="@color/txt_black_primary"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/mar_15"
        android:text="@string/you_need_point_to_unlock"
        android:textColor="@color/txt_black_in_card"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPlus1"
                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_marginHorizontal="@dimen/mar_10"
                    android:src="@drawable/download" />

                <LinearLayout
                    android:id="@+id/layout_title_plus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgPlus1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/download_set"
                        android:textColor="@color/txt_black_in_card"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/mar_10"
                        android:text="@string/download_required_point"
                        android:textColor="@color/txt_black_in_card"
                        android:textSize="16sp"
                        android:drawablePadding="@dimen/pad_5"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/dollar_coins" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDescPlus1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_title_plus1"
                    android:layout_toEndOf="@+id/imgPlus1"
                    android:paddingVertical="@dimen/mar_10"
                    android:text="@string/download_plus_detail"
                    android:textColor="@color/txt_black_in_card"
                    android:textSize="14sp" />
            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgPlus2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginHorizontal="@dimen/mar_10"
                    android:src="@drawable/importer" />


                <LinearLayout
                    android:id="@+id/layout_title_plus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/imgPlus2"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTitlePlus2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_set"
                        android:textColor="@color/txt_black_in_card"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/mar_10"
                        android:text="@string/import_required_point"
                        android:textColor="@color/txt_black_in_card"
                        android:textSize="16sp"
                        android:drawablePadding="@dimen/pad_5"
                        android:textStyle="bold"
                        app:drawableEndCompat="@drawable/dollar_coins" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtDescPlus2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_title_plus2"
                    android:layout_toEndOf="@+id/imgPlus2"
                    android:paddingVertical="@dimen/mar_10"
                    android:text="@string/import_plus_detail"
                    android:textColor="@color/txt_black_in_card"
                    android:textSize="14sp" />
            </RelativeLayout>


        </RelativeLayout>


