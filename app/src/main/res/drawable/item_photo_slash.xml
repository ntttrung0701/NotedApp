<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/splash2">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền trắng, bạn có thể thay đổi màu nền theo ý muốn -->

            <!-- Thiết lập góc bo tròn cho đường viền -->
            <corners android:radius="25dp" /> <!-- Điều này đặt góc bo tròn thành 16dp (có thể thay đổi theo ý muốn) -->

            <!-- Thiết lập đường viền cho ImageView -->
        </shape>
    </item>
    <item android:drawable="@drawable/doodle_paint6">
        <shape android:shape="rectangle">
        <padding android:top="10dp" android:bottom="10dp" android:left="10dp" android:right="10dp"/>
        </shape>
    </item>
</layer-list>